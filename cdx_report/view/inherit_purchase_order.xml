<odoo>
    <record id="view_add_meterial_request" model="ir.ui.view">
        <field name="name">purchase.order.meterial_request</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="mr_no"  string="Meterial No" />
            </xpath>
        </field>
    </record>
</odoo>